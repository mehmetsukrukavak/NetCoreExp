
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <script src="~/lib/jquery/jquery.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
        <a class="navbar-brand" href="#">.Net Core Example</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" href="/Product/Index">Ürün İşlemleri</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-item nav-link" href="/Kullanici/Index">Kullanıcı İşlemleri</a>
                        <a class="nav-item nav-link" href="/Rol/Index">Rol İşlemleri</a>
                    }

                    <a class="nav-item nav-link" href="/Account/Logout">@User.Identity.Name Çıkış</a>
                </div>
            </div>
        }

    </nav>
    @RenderBody()
</body>

</html>
