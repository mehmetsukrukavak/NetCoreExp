@model ApplicationUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="m-1 p-4 bg-primary">
    <div class="row text-white">
        <div class="col">
            <h4>Kullanıcı Güncelleme</h4>
        </div>
    </div>
</div>

<div class="m-1 p-1">
    <form asp-action="Update" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Id">Id</label>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="UserName">Kullanıcı Adı</label>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Password">Parola</label>
            <input type="password" name="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">E-Mail</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <input type="submit" class="btn btn-success" value="Kaydet" />
        <input type="reset" class="btn btn-primary" value="Formu Temizle" />
        <link-button action="Index" bg-color="danger" controller="Admin" name="Listeye Dön"></link-button>
    </form>
</div>